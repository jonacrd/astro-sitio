---
import BaseLayout from '../../layouts/BaseLayout.astro'
import SellerGuard from '../../components/react/SellerGuard.tsx'
import SellerDashboard from '../../components/react/SellerDashboard.tsx'
---

<BaseLayout title="Dashboard Vendedor">
  <SellerGuard client:load>
    <main class="min-h-screen bg-gray-50">
      <div class="container mx-auto px-4 py-8">
        <div class="mb-8">
          <h1 class="text-3xl font-bold text-gray-800 mb-2">Dashboard Vendedor</h1>
          <p class="text-gray-600">Gestiona tus productos, stock y ventas</p>
        </div>

        <SellerDashboard client:load />
      </div>
    </main>
  </SellerGuard>
</BaseLayout>
