---
import BaseLayout from '../layouts/BaseLayout.astro';
import SmartSearchBar from '../components/react/SmartSearchBar';
---

<BaseLayout title="Buscar Productos">
  <div class="min-h-screen bg-gradient-to-br from-blue-900 via-purple-900 to-indigo-900">
    <!-- Header -->
    <div class="container mx-auto px-4 py-8">
      <div class="text-center mb-8">
        <h1 class="text-4xl font-bold text-white mb-4">
          🔍 Buscar Productos
        </h1>
        <p class="text-white/80 text-lg">
          Búsqueda inteligente: productos, vendedores y servicios activos
        </p>
      </div>

      <!-- Barra de búsqueda inteligente -->
      <div class="max-w-4xl mx-auto">
        <SmartSearchBar 
          client:load
          onSearch={(query) => {
            console.log('🔍 Búsqueda realizada:', query);
          }}
          onCategoryClick={(category) => {
            console.log('📂 Categoría seleccionada:', category);
          }}
          onSellerClick={(sellerId) => {
            console.log('🏪 Vendedor seleccionado:', sellerId);
          }}
          placeholder="¿Qué necesitas? Ej: cerveza, hamburguesa, corte de cabello..."
        />
      </div>

      <!-- Información adicional -->
      <div class="max-w-4xl mx-auto mt-8">
        <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 border border-white/20">
          <h3 class="text-xl font-semibold text-white mb-4">
            🧠 Búsqueda Inteligente
          </h3>
          <div class="grid grid-cols-1 md:grid-cols-4 gap-4 text-white/80">
            <div class="text-center">
              <div class="text-3xl mb-2">🔍</div>
              <h4 class="font-semibold mb-2">Búsqueda Natural</h4>
              <p class="text-sm">Busca por nombre, categoría, vendedor o descripción</p>
            </div>
            <div class="text-center">
              <div class="text-3xl mb-2">📦</div>
              <h4 class="font-semibold mb-2">Productos & Servicios</h4>
              <p class="text-sm">Incluye productos con stock y servicios del día</p>
            </div>
            <div class="text-center">
              <div class="text-3xl mb-2">🏪</div>
              <h4 class="font-semibold mb-2">Vendedores Activos</h4>
              <p class="text-sm">Encuentra tiendas y servicios disponibles ahora</p>
            </div>
            <div class="text-center">
              <div class="text-3xl mb-2">⚡</div>
              <h4 class="font-semibold mb-2">Resultados Relevantes</h4>
              <p class="text-sm">Ordenados por relevancia y disponibilidad</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<script>
  // Limpiar caché de búsqueda al cargar la página
  document.addEventListener('DOMContentLoaded', () => {
    console.log('🧹 Limpiando caché de búsqueda...');
    
    // Limpiar localStorage relacionado con búsquedas
    const keysToRemove = [];
    for (let i = 0; i < localStorage.length; i++) {
      const key = localStorage.key(i);
      if (key && (key.includes('search') || key.includes('query') || key.includes('results'))) {
        keysToRemove.push(key);
      }
    }
    
    keysToRemove.forEach(key => {
      localStorage.removeItem(key);
      console.log('🗑️ Eliminado:', key);
    });
    
    console.log('✅ Caché de búsqueda limpiado');
  });
</script>




