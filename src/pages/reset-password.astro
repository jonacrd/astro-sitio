---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Restablecer Contraseña">
  <main class="min-h-screen bg-gray-50 py-8">
    <div class="container mx-auto px-4 max-w-md">
      <h1 class="text-3xl font-bold text-center mb-8">Restablecer Contraseña</h1>
      
      <div class="bg-white rounded-lg shadow-md p-6">
        <h2 class="text-xl font-semibold mb-4">Nueva Contraseña</h2>
        <form id="reset-form" class="space-y-4">
          <input 
            type="password" 
            id="new-password" 
            placeholder="Nueva contraseña" 
            required 
            class="w-full p-3 border rounded-lg"
            minlength="6"
          />
          <input 
            type="password" 
            id="confirm-password" 
            placeholder="Confirmar contraseña" 
            required 
            class="w-full p-3 border rounded-lg"
            minlength="6"
          />
          <button 
            type="submit" 
            class="w-full bg-blue-600 text-white py-3 rounded-lg hover:bg-blue-700"
          >
            Actualizar Contraseña
          </button>
        </form>
        
        <div class="mt-4 text-center">
          <a href="/" class="text-blue-600 hover:underline">
            Volver al inicio
          </a>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>

<script>
  import { updatePassword, getUser } from '../lib/session';

  document.getElementById('reset-form')?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const newPassword = (document.getElementById('new-password') as HTMLInputElement).value;
    const confirmPassword = (document.getElementById('confirm-password') as HTMLInputElement).value;

    if (newPassword !== confirmPassword) {
      alert('Las contraseñas no coinciden');
      return;
    }

    if (newPassword.length < 6) {
      alert('La contraseña debe tener al menos 6 caracteres');
      return;
    }

    try {
      // Verificar que hay un usuario autenticado
      const user = await getUser();
      if (!user) {
        alert('No hay usuario autenticado. Por favor inicia sesión primero.');
        window.location.href = '/';
        return;
      }

      await updatePassword(newPassword);
      alert('¡Contraseña actualizada exitosamente!');
      window.location.href = '/';
    } catch (error: any) {
      alert('Error actualizando contraseña: ' + error.message);
    }
  });
</script>





