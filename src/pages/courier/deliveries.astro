<BaseLayout title="Mis Deliveries">
  <div class="container mx-auto px-4 py-8">
    <h1 class="text-2xl font-bold mb-6">Mis Deliveries</h1>
    
    <div class="space-y-4">
      <!-- Delivery de ejemplo -->
      <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex justify-between items-start mb-4">
          <div>
            <h3 class="text-lg font-semibold">Delivery #DELIVERY_001</h3>
            <p class="text-gray-600">Pedido #TEST_ORDER_001</p>
            <p class="text-sm text-gray-500">Estado: <span class="font-medium text-orange-600">Pendiente</span></p>
          </div>
          <span class="bg-orange-100 text-orange-800 px-2 py-1 rounded-full text-sm">
            Nueva Oferta
          </span>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
          <div>
            <h4 class="font-medium text-gray-700">üìç Recogida</h4>
            <p class="text-sm text-gray-600">Calle Test 123, Santiago</p>
          </div>
