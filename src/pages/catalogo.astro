---
import BaseLayout from '@/layouts/BaseLayout.astro'
import CategoryCatalog from '@/components/react/CategoryCatalog.tsx'
import SmartSearch from '@/components/react/SmartSearch.tsx'
---

<BaseLayout 
  title="Catálogo de Productos - Town"
  description="Explora todos los productos disponibles por categorías - Town"
>
  <div class="min-h-screen bg-gray-50">
    <!-- Header con búsqueda -->
    <section class="bg-white shadow-sm">
      <div class="container mx-auto px-4 py-8">
        <div class="max-w-2xl mx-auto">
          <h1 class="text-3xl font-bold text-gray-900 mb-6 text-center">
            Catálogo de Productos
          </h1>
          <p class="text-gray-600 text-center mb-8">
            Explora todos los productos disponibles organizados por categorías
          </p>
          <SmartSearch client:load />
        </div>
      </div>
    </section>

    <!-- Catálogo principal -->
    <section class="py-12">
      <div class="container mx-auto px-4">
        <CategoryCatalog client:load />
      </div>
    </section>
  </div>
</BaseLayout>