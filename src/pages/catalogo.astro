---
import Layout from "../layouts/Base.astro";
import Header from "../components/Header.astro";
import Navigation from "../components/Navigation.astro";
import ProductGrid from "../components/ProductGrid.astro";
import CartPanel from "../components/CartPanel.astro";

// Obtener productos desde la base de datos
import { prisma } from '../lib/db';
const products = await prisma.product.findMany({ orderBy: { id: 'asc' } });
---

<Layout title="Cat√°logo - Tienda Web" description="Explora nuestro cat√°logo completo de productos">
  <Navigation />
  <Header />
  
  <div class="container">
    <main class="catalogo-page">
      <div class="page-header">
        <h1>üõçÔ∏è Cat√°logo de Productos</h1>
        <p>Explora nuestra amplia selecci√≥n de productos de calidad</p>
      </div>
      
      <ProductGrid products={products} />
    </main>
  </div>
  
  <CartPanel />
</Layout>

<style>
  .catalogo-page {
    padding: 2rem 0;
    max-width: 1200px;
    margin: 0 auto;
  }

  .page-header {
    text-align: center;
    margin-bottom: 3rem;
    padding: 0 20px;
  }

  .page-header h1 {
    font-size: 2.5rem;
    color: #333;
    margin-bottom: 1rem;
    font-weight: 700;
  }

  .page-header p {
    font-size: 1.1rem;
    color: #666;
    margin: 0;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .catalogo-page {
      padding: 1.5rem 0;
    }
    
    .page-header {
      margin-bottom: 2rem;
    }
    
    .page-header h1 {
      font-size: 2rem;
    }
    
    .page-header p {
      font-size: 1rem;
    }
  }

  @media (max-width: 480px) {
    .page-header h1 {
      font-size: 1.8rem;
    }
  }
</style>