<style>
  .test-container {
    min-height: 100vh;
    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    padding: 2rem 0;
  }

  .test-page {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .page-header {
    text-align: center;
    margin-bottom: 3rem;
    background: white;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .page-header h1 {
    font-size: 2.5rem;
    color: #333;
    margin-bottom: 1rem;
    font-weight: 700;
  }

  .page-header p {
    font-size: 1.1rem;
    color: #666;
    margin: 0;
  }

  .test-info {
    background: white;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    margin-top: 3rem;
  }

  .test-info h2 {
    color: #333;
    margin-bottom: 1rem;
    font-size: 1.5rem;
  }

  .test-info ul {
    color: #666;
    line-height: 1.6;
  }

  .test-info li {
    margin-bottom: 0.5rem;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .test-page {
      padding: 0 16px;
    }
    
    .page-header {
      padding: 1.5rem;
    }
    
    .page-header h1 {
      font-size: 2rem;
    }
    
    .test-info {
      padding: 1.5rem;
    }
  }
</style>
