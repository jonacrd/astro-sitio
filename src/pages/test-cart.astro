// Productos de prueba sin base de datos
const testProducts = [
  {
    id: 1,
    slug: 'producto-1',
    name: 'Producto de Prueba 1',
    description: 'Este es un producto de prueba para verificar el funcionamiento del carrito',
    priceCents: 15000,
    stock: 10,
    imageUrl: '/img/placeholder.jpg'
  },
  {
    id: 2,
    slug: 'producto-2',
    name: 'Producto de Prueba 2',
    description: 'Otro producto de prueba con stock limitado',
    priceCents: 25000,
    stock: 3,
    imageUrl: '/img/placeholder.jpg'
  },
  {
    id: 3,
    slug: 'producto-3',
    name: 'Producto Sin Stock',
    description: 'Este producto no tiene stock disponible',
    priceCents: 30000,
    stock: 0,
    imageUrl: '/img/placeholder.jpg'
  }
