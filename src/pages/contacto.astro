        font-size: 1.8rem;
      }
      
      .hero-section p {
        font-size: 0.9rem;
      }

      .contact-content {
        padding: 0 0.5rem;
      }

      .contact-info h2 {
        font-size: 1.6rem;
      }

      .contact-card {
        padding: 1rem;
      }

      .contact-card h3 {
        font-size: 1rem;
      }

      .contact-form-section h2 {
        font-size: 1.6rem;
      }

      .form-group input,
      .form-group select,
      .form-group textarea {
        padding: 0.7rem;
