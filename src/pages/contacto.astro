      }

      .contact-info h2 {
        font-size: 1.8rem;
        margin-bottom: 1.5rem;
      }

      .contact-cards {
        grid-template-columns: 1fr;
        gap: 1.5rem;
      }

      .contact-card {
        padding: 1.5rem;
      }

      .contact-card h3 {
        font-size: 1.1rem;
      }

      .social-links {
        grid-template-columns: 1fr;
        gap: 1rem;
      }

      .contact-form-section h2 {
        font-size: 1.8rem;
        margin-bottom: 1.5rem;
      }

      .form-group {
        margin-bottom: 1.5rem;
      }

      .form-group label {
        font-size: 0.9rem;
      }

      .form-group input,
      .form-group select,
      .form-group textarea {
        padding: 0.8rem;
        font-size: 0.9rem;
      }

      .submit-btn {
