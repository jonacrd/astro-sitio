  <script>
    // Variables globales
    let statsInterval;
    let isUpdating = false;

    // FunciÃ³n para formatear fecha
    function formatDate(dateString) {
      const date = new Date(dateString);
      return date.toLocaleDateString('es-ES', {
        day: '2-digit',
        month: '2-digit',
        year: '2-digit',
        hour: '2-digit',
        minute: '2-digit'
      });
    }

    // FunciÃ³n para formatear precio
    function formatPrice(cents) {
      return new Intl.NumberFormat('es-ES', {
        style: 'currency',
        currency: 'USD'
      }).format(cents / 100);
    }

    // FunciÃ³n para actualizar las mÃ©tricas
    async function updateStats() {
      if (isUpdating) return;
      isUpdating = true;

      try {
        const response = await fetch('/api/stats');
        const result = await response.json();

        if (result.success) {
          const data = result.data;

          // Actualizar tarjetas de mÃ©tricas
          document.getElementById('leadsToday').textContent = data.leads_today;
          document.getElementById('ordersToday').textContent = data.orders_today;
          document.getElementById('revenueToday').textContent = formatPrice(data.revenue_today);
          document.getElementById('lowStock').textContent = data.low_stock;

          // Actualizar tabla de Ã³rdenes
          const ordersTableBody = document.getElementById('ordersTableBody');
          if (data.recent_orders.length > 0) {
            ordersTableBody.innerHTML = data.recent_orders.map(order => `
              <tr class="hover:bg-gray-50">
                <td class="px-4 py-3 text-sm font-medium text-gray-900">
                  ${order.orderCode}
                </td>
                <td class="px-4 py-3 text-sm text-gray-900">
                  ${order.customerName || 'N/A'}
                </td>
                <td class="px-4 py-3 text-sm text-gray-900">
                  ${formatPrice(order.totalCents)}
                </td>
                <td class="px-4 py-3 text-sm text-gray-500">
                  ${formatDate(order.createdAt)}
                </td>
              </tr>
            `).join('');
          } else {
            ordersTableBody.innerHTML = `
              <tr>
                <td colspan="4" class="px-4 py-8 text-center text-gray-500">
                  No hay Ã³rdenes disponibles
                </td>
              </tr>
            `;
          }

          // Actualizar tabla de leads
          const leadsTableBody = document.getElementById('leadsTableBody');
          if (data.recent_leads.length > 0) {
            leadsTableBody.innerHTML = data.recent_leads.map(lead => `
              <tr class="hover:bg-gray-50">
                <td class="px-4 py-3 text-sm font-medium text-gray-900">
                  ${lead.name}
                </td>
                <td class="px-4 py-3 text-sm text-gray-900">
                  ${lead.email}
                </td>
                <td class="px-4 py-3 text-sm text-gray-900">
                  ${lead.whatsapp}
                </td>
                <td class="px-4 py-3 text-sm text-gray-500">
                  ${formatDate(lead.createdAt)}
                </td>
              </tr>
            `).join('');
          } else {
            leadsTableBody.innerHTML = `
              <tr>
                <td colspan="4" class="px-4 py-8 text-center text-gray-500">
                  No hay leads disponibles
                </td>
              </tr>
            `;
          }

          // Actualizar timestamp
          document.getElementById('lastUpdated').textContent = 
            `Actualizado: ${formatDate(data.last_updated)}`;
        }
      } catch (error) {
        console.error('Error updating stats:', error);
        document.getElementById('lastUpdated').textContent = 'Error al actualizar';
      } finally {
        isUpdating = false;
      }
    }

    // Inicializar dashboard
    document.addEventListener('DOMContentLoaded', () => {
      // Cargar datos iniciales
      updateStats();

      // Configurar actualizaciÃ³n automÃ¡tica cada 10 segundos
      statsInterval = setInterval(updateStats, 10000);

      // Actualizar cuando la pÃ¡gina vuelve a ser visible
      document.addEventListener('visibilitychange', () => {
        if (!document.hidden) {
          updateStats();
        }
      });
    });

    // Limpiar interval al salir de la pÃ¡gina
    window.addEventListener('beforeunload', () => {
      if (statsInterval) {
        clearInterval(statsInterval);
      }
    });
  </script>
</BaseLayout>
