    const btnLogin = document.getElementById('btn-login');
    const btnRegister = document.getElementById('btn-register');
    const btnSeller = document.getElementById('btn-seller');

    async function refreshAuth() {
      try {
        const response = await fetch('/api/auth/me-universal');
        const { user } = await response.json();
        
        if (user) {
          btnLogin.style.display = 'none';
          btnRegister.style.display = 'none';
          btnSeller.style.display = 'inline-block';
          btnSeller.textContent = 'Mi Cuenta';
          btnSeller.onclick = () => window.location.href = '/dashboard';
        } else {
          btnLogin.style.display = 'inline-block';
          btnRegister.style.display = 'inline-block';
          btnSeller.style.display = 'inline-block';
          btnSeller.textContent = 'Quiero Vender';
        }
      } catch (error) {
        console.log('Usuario no autenticado');
      }
    }

    btnLogin.addEventListener('click', () => {
      alert('Funcionalidad de login en desarrollo');
    });

    btnRegister.addEventListener('click', () => {
      alert('Funcionalidad de registro en desarrollo');
