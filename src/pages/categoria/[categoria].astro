---
import BaseLayout from '../../layouts/BaseLayout.astro'

export async function getStaticPaths() {
  const categories = [
    'minimarkets',
    'medicinas', 
    'postres',
    'carniceria',
    'servicios',
    'mascotas',
    'ninos'
  ];

  return categories.map(categoria => ({
    params: { categoria }
  }));
}

const { categoria } = Astro.params;

// Configuraci칩n de categor칤as
const categoryConfig = {
  minimarkets: {
    name: 'Minimarkets',
    icon: '游낅',
    color: 'from-blue-500 to-cyan-500',
    description: 'Todo lo que necesitas para tu hogar en un solo lugar'
  },
  medicinas: {
    name: 'Medicinas',
    icon: '游눍',
    color: 'from-green-500 to-emerald-500',
    description: 'Farmacias y productos de salud'
  },
  postres: {
    name: 'Postres',
    icon: '游꼻',
    color: 'from-pink-500 to-rose-500',
    description: 'Dulces y postres para endulzar tu d칤a'
  },
  carniceria: {
    name: 'Carnicer칤a',
    icon: '游볼',
    color: 'from-red-600 to-red-800',
    description: 'Carnes frescas y productos c치rnicos'
  },
  servicios: {
    name: 'Servicios',
    icon: '游댢',
    color: 'from-purple-500 to-indigo-500',
    description: 'Servicios profesionales para tu hogar y negocio'
  },
  mascotas: {
    name: 'Mascotas',
    icon: '游냇',
    color: 'from-yellow-500 to-orange-500',
    description: 'Todo para el cuidado de tus mascotas'
  },
  ninos: {
    name: 'Ni침os',
    icon: '游빚',
    color: 'from-cyan-500 to-blue-500',
    description: 'Productos y servicios para los m치s peque침os'
  }
};

const config = categoryConfig[categoria] || {
  name: 'Categor칤a',
  icon: '游닍',
  color: 'from-gray-500 to-gray-600',
  description: 'Productos y servicios de esta categor칤a'
};
---

<BaseLayout title={`${config.name} - Town`}>
  <main class="min-h-screen bg-gray-900 pb-20">
    <!-- Header de la categor칤a -->
    <div class={`bg-gradient-to-r ${config.color} px-4 py-8`}>
      <div class="max-w-7xl mx-auto">
        <div class="flex items-center gap-4 mb-4">
          <div class="w-16 h-16 bg-white/20 rounded-xl flex items-center justify-center backdrop-blur-sm">
            <span class="text-4xl">{config.icon}</span>
          </div>
          <div>
            <h1 class="text-3xl font-bold text-white">{config.name}</h1>
            <p class="text-white/80">{config.description}</p>
          </div>
        </div>
        
        <!-- Filtros r치pidos -->
        <div class="flex gap-2 overflow-x-auto scrollbar-hide pb-2">
          <button class="px-4 py-2 bg-white/20 text-white rounded-full text-sm whitespace-nowrap backdrop-blur-sm hover:bg-white/30 transition-colors">
            Todo
          </button>
          <button class="px-4 py-2 bg-white/20 text-white rounded-full text-sm whitespace-nowrap backdrop-blur-sm hover:bg-white/30 transition-colors">
            Destacados
          </button>
          <button class="px-4 py-2 bg-white/20 text-white rounded-full text-sm whitespace-nowrap backdrop-blur-sm hover:bg-white/30 transition-colors">
            M치s Vendidos
          </button>
          <button class="px-4 py-2 bg-white/20 text-white rounded-full text-sm whitespace-nowrap backdrop-blur-sm hover:bg-white/30 transition-colors">
            Precio Bajo
          </button>
        </div>
      </div>
    </div>

    <!-- Contenido principal -->
    <div class="max-w-7xl mx-auto px-4 py-6">
      <!-- Estad칤sticas r치pidas -->
      <div class="grid grid-cols-3 gap-4 mb-6">
        <div class="bg-gray-800 rounded-lg p-4 text-center">
          <div class="text-2xl font-bold text-blue-400" id="total-vendors">0</div>
          <div class="text-gray-400 text-sm">Vendedores</div>
        </div>
        <div class="bg-gray-800 rounded-lg p-4 text-center">
          <div class="text-2xl font-bold text-green-400" id="active-vendors">0</div>
          <div class="text-gray-400 text-sm">Activos</div>
        </div>
        <div class="bg-gray-800 rounded-lg p-4 text-center">
          <div class="text-2xl font-bold text-purple-400" id="total-products">0</div>
          <div class="text-gray-400 text-sm">Productos</div>
        </div>
      </div>

      <!-- Lista de vendedores -->
      <div class="space-y-4" id="vendors-list">
        <!-- Los vendedores se cargar치n aqu칤 din치micamente -->
        <div class="text-center py-8">
          <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-blue-500 mx-auto mb-4"></div>
          <p class="text-gray-400">Cargando vendedores...</p>
        </div>
      </div>
    </div>
  </main>

  <script define:vars={{ categoria, config }}>
    // Cargar vendedores y productos de la categor칤a
    async function loadCategoryData() {
      try {
        console.log(`游댌 Cargando datos para categor칤a: ${categoria}`);
        
        const response = await fetch(`/api/categoria/${categoria}`);
        const data = await response.json();

        if (!data.success) {
          console.error('Error en API:', data.error);
          showError('Error cargando datos de la categor칤a');
          return;
        }

        console.log(`游닍 Datos de ${categoria}:`, data);

        // Actualizar estad칤sticas
        document.getElementById('total-vendors').textContent = data.stats.totalVendors.toString();
        document.getElementById('active-vendors').textContent = data.stats.activeVendors.toString();
        document.getElementById('total-products').textContent = data.stats.totalProducts.toString();

        // Renderizar vendedores
        renderVendors(data.vendors);

      } catch (error) {
        console.error('Error cargando datos:', error);
        showError('Error de conexi칩n. Intenta recargar la p치gina.');
      }
    }

    function showError(message) {
      const container = document.getElementById('vendors-list');
      container.innerHTML = `
        <div class="text-center py-12">
          <div class="text-6xl mb-4">丘멆잺</div>
          <h3 class="text-xl font-semibold text-white mb-2">Error</h3>
          <p class="text-gray-400 mb-4">${message}</p>
          <button 
            onclick="loadCategoryData()" 
            class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg transition-colors"
          >
            Reintentar
          </button>
        </div>
      `;
    }

    function renderVendors(vendors) {
      const container = document.getElementById('vendors-list');
      
      if (!vendors || vendors.length === 0) {
        container.innerHTML = `
          <div class="text-center py-12">
            <div class="text-6xl mb-4">${config.icon}</div>
            <h3 class="text-xl font-semibold text-white mb-2">No hay vendedores disponibles</h3>
            <p class="text-gray-400">Pronto tendremos vendedores en esta categor칤a</p>
          </div>
        `;
        return;
      }

      container.innerHTML = vendors.map(vendor => `
        <div class="bg-gray-800 rounded-xl p-6 hover:bg-gray-750 transition-colors">
          <div class="flex items-start gap-4">
            <!-- Avatar del vendedor -->
            <div class="w-16 h-16 bg-blue-500/20 rounded-xl flex items-center justify-center flex-shrink-0">
              <span class="text-2xl">${config.icon}</span>
            </div>
            
            <!-- Informaci칩n del vendedor -->
            <div class="flex-1">
              <div class="flex items-center gap-2 mb-2">
                <h3 class="text-xl font-semibold text-white">${vendor.name}</h3>
                <span class="px-2 py-1 bg-green-500/20 text-green-400 text-xs rounded-full">
                  ${vendor.isActive ? '游릭 Activo' : '游댮 Inactivo'}
                </span>
              </div>
              
              <p class="text-gray-400 text-sm mb-3">
                ${vendor.products.length} productos disponibles
              </p>
              
              <!-- Productos destacados -->
              <div class="grid grid-cols-2 md:grid-cols-3 gap-3">
                ${vendor.products.slice(0, 6).map(product => `
                  <div class="bg-gray-700 rounded-lg p-3 hover:bg-gray-600 transition-colors cursor-pointer" onclick="viewProduct('${product.id}')">
                    <img 
                      src="${product.image_url || '/placeholder-product.jpg'}" 
                      alt="${product.title}"
                      class="w-full h-20 object-cover rounded-lg mb-2"
                      onerror="this.src='/placeholder-product.jpg'"
                    />
                    <h4 class="text-white font-medium text-sm mb-1 truncate">${product.title}</h4>
                    <p class="text-blue-400 font-semibold text-sm">$${(product.price_cents / 100).toFixed(0)}</p>
                    ${product.stock > 0 ? 
                      `<span class="text-green-400 text-xs">Stock: ${product.stock}</span>` : 
                      `<span class="text-red-400 text-xs">Sin stock</span>`
                    }
                  </div>
                `).join('')}
              </div>
              
              ${vendor.products.length > 6 ? `
                <button 
                  class="mt-3 text-blue-400 hover:text-blue-300 text-sm font-medium"
                  onclick="viewAllProducts('${vendor.id}')"
                >
                  Ver todos los productos (${vendor.products.length})
                </button>
              ` : ''}
            </div>
            
            <!-- Bot칩n de contacto -->
            <div class="flex flex-col gap-2">
              <button 
                class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors"
                onclick="contactVendor('${vendor.id}', '${vendor.phone}')"
              >
                Contactar
              </button>
              <button 
                class="bg-gray-700 hover:bg-gray-600 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors"
                onclick="viewVendor('${vendor.id}')"
              >
                Ver Perfil
              </button>
            </div>
          </div>
        </div>
      `).join('');
    }

    // Funciones de interacci칩n
    window.viewProduct = function(productId) {
      console.log('Ver producto:', productId);
      // window.location.href = `/producto/${productId}`;
    };

    window.viewAllProducts = function(sellerId) {
      console.log('Ver todos los productos de:', sellerId);
      window.location.href = `/vendedor/${sellerId}`;
    };

    window.contactVendor = function(sellerId, phone) {
      if (phone) {
        window.open(`https://wa.me/${phone.replace(/\D/g, '')}`, '_blank');
      } else {
        alert('N칰mero de tel칠fono no disponible');
      }
    };

    window.viewVendor = function(sellerId) {
      window.location.href = `/vendedor/${sellerId}`;
    };

    // Cargar datos al montar la p치gina
    document.addEventListener('DOMContentLoaded', loadCategoryData);
  </script>
</BaseLayout>
