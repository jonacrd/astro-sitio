---
import BaseLayout from '../../layouts/BaseLayout.astro'
---

<BaseLayout title="Restaurantes - Town">
  <main class="min-h-screen bg-gray-900 pb-20">
    <!-- Header de la categor√≠a -->
    <div class="bg-gradient-to-r from-orange-500 to-red-500 px-4 py-8">
      <div class="max-w-7xl mx-auto">
        <div class="flex items-center gap-4 mb-4">
          <div class="w-16 h-16 bg-white/20 rounded-xl flex items-center justify-center backdrop-blur-sm">
            <span class="text-4xl">üçΩÔ∏è</span>
          </div>
          <div>
            <h1 class="text-3xl font-bold text-white">Restaurantes</h1>
            <p class="text-white/80">Deliciosa comida preparada por los mejores chefs de tu barrio</p>
          </div>
        </div>
        
        <!-- Filtros r√°pidos -->
        <div class="flex gap-2 overflow-x-auto scrollbar-hide pb-2">
          <button class="px-4 py-2 bg-white/20 text-white rounded-full text-sm whitespace-nowrap backdrop-blur-sm hover:bg-white/30 transition-colors">
            Todo
          </button>
          <button class="px-4 py-2 bg-white/20 text-white rounded-full text-sm whitespace-nowrap backdrop-blur-sm hover:bg-white/30 transition-colors">
            Comida R√°pida
          </button>
          <button class="px-4 py-2 bg-white/20 text-white rounded-full text-sm whitespace-nowrap backdrop-blur-sm hover:bg-white/30 transition-colors">
            Comida Casera
          </button>
          <button class="px-4 py-2 bg-white/20 text-white rounded-full text-sm whitespace-nowrap backdrop-blur-sm hover:bg-white/30 transition-colors">
            Postres
          </button>
          <button class="px-4 py-2 bg-white/20 text-white rounded-full text-sm whitespace-nowrap backdrop-blur-sm hover:bg-white/30 transition-colors">
            Bebidas
          </button>
        </div>
      </div>
    </div>

    <!-- Contenido principal -->
    <div class="max-w-7xl mx-auto px-4 py-6">
      <!-- Estad√≠sticas r√°pidas -->
      <div class="grid grid-cols-3 gap-4 mb-6">
        <div class="bg-gray-800 rounded-lg p-4 text-center">
          <div class="text-2xl font-bold text-orange-400" id="total-restaurants">0</div>
          <div class="text-gray-400 text-sm">Restaurantes</div>
        </div>
        <div class="bg-gray-800 rounded-lg p-4 text-center">
          <div class="text-2xl font-bold text-green-400" id="active-restaurants">0</div>
          <div class="text-gray-400 text-sm">Abiertos Ahora</div>
        </div>
        <div class="bg-gray-800 rounded-lg p-4 text-center">
          <div class="text-2xl font-bold text-blue-400" id="total-products">0</div>
          <div class="text-gray-400 text-sm">Platos Disponibles</div>
        </div>
      </div>

      <!-- Lista de restaurantes -->
      <div class="space-y-4" id="restaurants-list">
        <!-- Los restaurantes se cargar√°n aqu√≠ din√°micamente -->
        <div class="text-center py-8">
          <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-orange-500 mx-auto mb-4"></div>
          <p class="text-gray-400">Cargando restaurantes...</p>
        </div>
      </div>
    </div>
  </main>

  <script>
    import { supabase } from '../../lib/supabase-browser';

    // Cargar restaurantes y productos
    async function loadRestaurants() {
      try {
        // Buscar productos de la categor√≠a restaurantes
        const { data: products, error } = await supabase
          .from('products')
          .select(`
            id,
            title,
            price_cents,
            image_url,
            stock,
            seller_id,
            category,
            created_at,
            profiles!products_seller_id_fkey (
              name,
              phone,
              is_active
            )
          `)
          .eq('category', 'restaurantes')
          .eq('profiles.is_active', true)
          .order('created_at', { ascending: false });

        if (error) {
          console.error('Error cargando restaurantes:', error);
          return;
        }

        console.log('üçΩÔ∏è Productos de restaurantes:', products);

        // Agrupar productos por vendedor (restaurante)
        const restaurantsMap = new Map();
        
        products?.forEach(product => {
          const sellerId = product.seller_id;
          if (!restaurantsMap.has(sellerId)) {
            restaurantsMap.set(sellerId, {
              id: sellerId,
              name: product.profiles?.name || 'Restaurante',
              phone: product.profiles?.phone || '',
              isActive: product.profiles?.is_active || false,
              products: []
            });
          }
          restaurantsMap.get(sellerId).products.push(product);
        });

        const restaurants = Array.from(restaurantsMap.values());

        // Actualizar estad√≠sticas
        document.getElementById('total-restaurants').textContent = restaurants.length.toString();
        document.getElementById('active-restaurants').textContent = restaurants.filter(r => r.isActive).length.toString();
        document.getElementById('total-products').textContent = products?.length.toString() || '0';

        // Renderizar restaurantes
        renderRestaurants(restaurants);

      } catch (error) {
        console.error('Error cargando datos:', error);
      }
    }

    function renderRestaurants(restaurants) {
      const container = document.getElementById('restaurants-list');
      
      if (!restaurants || restaurants.length === 0) {
        container.innerHTML = `
          <div class="text-center py-12">
            <div class="text-6xl mb-4">üçΩÔ∏è</div>
            <h3 class="text-xl font-semibold text-white mb-2">No hay restaurantes disponibles</h3>
            <p class="text-gray-400">Pronto tendremos deliciosos restaurantes en tu √°rea</p>
          </div>
        `;
        return;
      }

      container.innerHTML = restaurants.map(restaurant => `
        <div class="bg-gray-800 rounded-xl p-6 hover:bg-gray-750 transition-colors">
          <div class="flex items-start gap-4">
            <!-- Avatar del restaurante -->
            <div class="w-16 h-16 bg-orange-500/20 rounded-xl flex items-center justify-center flex-shrink-0">
              <span class="text-2xl">üçΩÔ∏è</span>
            </div>
            
            <!-- Informaci√≥n del restaurante -->
            <div class="flex-1">
              <div class="flex items-center gap-2 mb-2">
                <h3 class="text-xl font-semibold text-white">${restaurant.name}</h3>
                <span class="px-2 py-1 bg-green-500/20 text-green-400 text-xs rounded-full">
                  ${restaurant.isActive ? 'üü¢ Abierto' : 'üî¥ Cerrado'}
                </span>
              </div>
              
              <p class="text-gray-400 text-sm mb-3">
                ${restaurant.products.length} platos disponibles
              </p>
              
              <!-- Productos destacados -->
              <div class="grid grid-cols-2 md:grid-cols-3 gap-3">
                ${restaurant.products.slice(0, 6).map(product => `
                  <div class="bg-gray-700 rounded-lg p-3 hover:bg-gray-600 transition-colors cursor-pointer" onclick="viewProduct('${product.id}')">
                    <img 
                      src="${product.image_url || '/placeholder-product.jpg'}" 
                      alt="${product.title}"
                      class="w-full h-20 object-cover rounded-lg mb-2"
                      onerror="this.src='/placeholder-product.jpg'"
                    />
                    <h4 class="text-white font-medium text-sm mb-1 truncate">${product.title}</h4>
                    <p class="text-orange-400 font-semibold text-sm">$${product.price_cents.toFixed(0)}</p>
                    ${product.stock > 0 ? 
                      `<span class="text-green-400 text-xs">Stock: ${product.stock}</span>` : 
                      `<span class="text-red-400 text-xs">Sin stock</span>`
                    }
                  </div>
                `).join('')}
              </div>
              
              ${restaurant.products.length > 6 ? `
                <button 
                  class="mt-3 text-orange-400 hover:text-orange-300 text-sm font-medium"
                  onclick="viewAllProducts('${restaurant.id}')"
                >
                  Ver todos los platos (${restaurant.products.length})
                </button>
              ` : ''}
            </div>
            
            <!-- Bot√≥n de contacto -->
            <div class="flex flex-col gap-2">
              <button 
                class="bg-orange-500 hover:bg-orange-600 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors"
                onclick="contactRestaurant('${restaurant.id}', '${restaurant.phone}')"
              >
                Contactar
              </button>
              <button 
                class="bg-gray-700 hover:bg-gray-600 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors"
                onclick="viewRestaurant('${restaurant.id}')"
              >
                Ver Perfil
              </button>
            </div>
          </div>
        </div>
      `).join('');
    }

    // Funciones de interacci√≥n
    window.viewProduct = function(productId) {
      // Implementar vista de producto
      console.log('Ver producto:', productId);
      // window.location.href = `/producto/${productId}`;
    };

    window.viewAllProducts = function(sellerId) {
      // Implementar vista de todos los productos del vendedor
      console.log('Ver todos los productos de:', sellerId);
      window.location.href = `/vendedor/${sellerId}`;
    };

    window.contactRestaurant = function(sellerId, phone) {
      if (phone) {
        window.open(`https://wa.me/${phone.replace(/\D/g, '')}`, '_blank');
      } else {
        alert('N√∫mero de tel√©fono no disponible');
      }
    };

    window.viewRestaurant = function(sellerId) {
      window.location.href = `/vendedor/${sellerId}`;
    };

    // Cargar datos al montar la p√°gina
    document.addEventListener('DOMContentLoaded', loadRestaurants);
  </script>
</BaseLayout>
