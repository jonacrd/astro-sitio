---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Debug Categorías - Town">
  <main class="min-h-screen bg-gray-900 p-6">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-2xl font-bold text-white mb-6">Debug Categorías</h1>
      
      <div class="bg-gray-800 rounded-xl p-6 mb-6">
        <h2 class="text-xl font-semibold text-white mb-4">Estado de la Base de Datos</h2>
        <button 
          id="check-db-btn"
          class="bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded-lg transition-colors"
        >
          Verificar Base de Datos
        </button>
        <div id="db-result" class="mt-4"></div>
      </div>

      <div class="bg-gray-800 rounded-xl p-6 mb-6">
        <h2 class="text-xl font-semibold text-white mb-4">Insertar Datos de Ejemplo</h2>
        <button 
          id="insert-data-btn"
          class="bg-green-500 hover:bg-green-600 text-white py-2 px-4 rounded-lg transition-colors"
        >
          Insertar Datos
        </button>
        <div id="insert-result" class="mt-4"></div>
      </div>

      <div class="bg-gray-800 rounded-xl p-6">
        <h2 class="text-xl font-semibold text-white mb-4">Probar Categoría</h2>
        <div class="flex gap-2 mb-4">
          <button onclick="testCategory('postres')" class="bg-purple-500 hover:bg-purple-600 text-white py-2 px-4 rounded-lg transition-colors">
            Postres
          </button>
          <button onclick="testCategory('minimarkets')" class="bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded-lg transition-colors">
            Minimarkets
          </button>
          <button onclick="testCategory('medicinas')" class="bg-green-500 hover:bg-green-600 text-white py-2 px-4 rounded-lg transition-colors">
            Medicinas
          </button>
        </div>
        <div id="category-result" class="mt-4"></div>
      </div>
    </div>
  </main>

  <script>
    // Verificar base de datos
    document.getElementById('check-db-btn').addEventListener('click', async () => {
      const btn = document.getElementById('check-db-btn');
      const result = document.getElementById('db-result');
      
      btn.disabled = true;
      btn.textContent = 'Verificando...';
      
      try {
        const response = await fetch('/api/debug-category');
        const data = await response.json();
        
        if (data.success) {
          result.innerHTML = `
            <div class="bg-green-500/20 border border-green-500/30 rounded-lg p-4">
              <div class="text-green-400 font-medium">✅ Conexión OK</div>
              <div class="text-gray-300 text-sm mt-2">
                <strong>Vendedores:</strong> ${data.vendors.total} total, ${data.vendors.active} activos<br>
                <strong>Categorías:</strong><br>
                ${Object.entries(data.categories).map(([cat, info]) => 
                  `• ${cat}: ${info.count} productos ${info.error ? `(Error: ${info.error})` : ''}`
                ).join('<br>')}
              </div>
            </div>
          `;
        } else {
          result.innerHTML = `
            <div class="bg-red-500/20 border border-red-500/30 rounded-lg p-4">
              <div class="text-red-400 font-medium">❌ Error</div>
              <div class="text-gray-300 text-sm mt-2">${data.error}</div>
            </div>
          `;
        }
      } catch (error) {
        result.innerHTML = `
          <div class="bg-red-500/20 border border-red-500/30 rounded-lg p-4">
            <div class="text-red-400 font-medium">❌ Error de conexión</div>
            <div class="text-gray-300 text-sm mt-2">${error.message}</div>
          </div>
        `;
      }
      
      btn.disabled = false;
      btn.textContent = 'Verificar Base de Datos';
    });

    // Insertar datos
    document.getElementById('insert-data-btn').addEventListener('click', async () => {
      const btn = document.getElementById('insert-data-btn');
      const result = document.getElementById('insert-result');
      
      btn.disabled = true;
      btn.textContent = 'Insertando...';
      
      try {
        const response = await fetch('/api/seed-category-data', { method: 'POST' });
        const data = await response.json();
        
        if (data.success) {
          result.innerHTML = `
            <div class="bg-green-500/20 border border-green-500/30 rounded-lg p-4">
              <div class="text-green-400 font-medium">✅ Datos insertados</div>
              <div class="text-gray-300 text-sm mt-2">
                Vendedores: ${data.vendors}<br>
                Productos: ${data.products}
              </div>
            </div>
          `;
        } else {
          result.innerHTML = `
            <div class="bg-red-500/20 border border-red-500/30 rounded-lg p-4">
              <div class="text-red-400 font-medium">❌ Error</div>
              <div class="text-gray-300 text-sm mt-2">${data.error}</div>
            </div>
          `;
        }
      } catch (error) {
        result.innerHTML = `
          <div class="bg-red-500/20 border border-red-500/30 rounded-lg p-4">
            <div class="text-red-400 font-medium">❌ Error de conexión</div>
            <div class="text-gray-300 text-sm mt-2">${error.message}</div>
          </div>
        `;
      }
      
      btn.disabled = false;
      btn.textContent = 'Insertar Datos';
    });

    // Probar categoría
    window.testCategory = async function(category) {
      const result = document.getElementById('category-result');
      
      result.innerHTML = '<div class="text-gray-400">Probando categoría...</div>';
      
      try {
        const response = await fetch(`/api/categoria/${category}`);
        const data = await response.json();
        
        if (data.success) {
          result.innerHTML = `
            <div class="bg-green-500/20 border border-green-500/30 rounded-lg p-4">
              <div class="text-green-400 font-medium">✅ Categoría ${category} OK</div>
              <div class="text-gray-300 text-sm mt-2">
                Vendedores: ${data.stats.totalVendors}<br>
                Activos: ${data.stats.activeVendors}<br>
                Productos: ${data.stats.totalProducts}
              </div>
            </div>
          `;
        } else {
          result.innerHTML = `
            <div class="bg-red-500/20 border border-red-500/30 rounded-lg p-4">
              <div class="text-red-400 font-medium">❌ Error en ${category}</div>
              <div class="text-gray-300 text-sm mt-2">${data.error}</div>
            </div>
          `;
        }
      } catch (error) {
        result.innerHTML = `
          <div class="bg-red-500/20 border border-red-500/30 rounded-lg p-4">
            <div class="text-red-400 font-medium">❌ Error de conexión</div>
            <div class="text-gray-300 text-sm mt-2">${error.message}</div>
          </div>
        `;
      }
    };
  </script>
</BaseLayout>
