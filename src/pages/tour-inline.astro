          </div>
        </div>
      `;
      
      modal.appendChild(content);
      document.body.appendChild(modal);
      
      console.log('âœ… Modal con estilos inline creado');
    });
    
    // FunciÃ³n para iniciar el tour completo
    (window as any).startFullTour = async function() {
      try {
        console.log('ğŸš€ Iniciando tour completo...');
        localStorage.removeItem('town_tour_v1_done');
        
        const { startTour } = await import('../lib/tour/TourManager');
        startTour();
