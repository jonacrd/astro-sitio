---
import Layout from "@/Layouts/Base.astro";
import Header from "@components/Header.astro";
import MainBanner from "@components/MainBanner.astro";
import CategoryCarousel from "@components/CategoryCarousel.astro";
import ProductCarousel from "@components/ProductCarousel.astro";
import CategoryBanners from "@components/CategoryBanners.astro";
import SectionCarousel from "@components/SectionCarousel.astro";
import Navigation from "@components/Navigation.astro";
import ProductGrid from "@components/ProductGrid.astro";

// Obtener productos desde la base de datos
import { prisma } from '@lib/db';
const products = await prisma.product.findMany({ orderBy: { id: 'asc' } });
---
<Layout title="Tienda Web" description="Bienvenido a nuestra tienda en l√≠nea">
  <Navigation />
  <Header />
  <main>
    <CategoryCarousel />
    <ProductCarousel />
    <MainBanner />
    <CategoryBanners />
    <SectionCarousel />
    
    <!-- Secci√≥n de productos -->
    <section class="products-section">
      <div class="section-header">
        <h2>üõçÔ∏è Nuestros Productos</h2>
        <p>Descubre nuestra amplia selecci√≥n de productos de calidad</p>
      </div>
      <ProductGrid products={products} />
    </section>
  </main>
  <footer>‚Ä¶</footer>
</Layout>

<style>
  .products-section {
    padding: 60px 0;
    background: linear-gradient(135deg, #fff 0%, #f8f9fa 100%);
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
    padding: 0 20px;
  }

  .section-header h2 {
    font-size: 2.5rem;
    color: #333;
    margin-bottom: 1rem;
    font-weight: 700;
  }

  .section-header p {
    font-size: 1.1rem;
    color: #666;
    margin: 0;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .products-section {
      padding: 40px 0;
    }
    
    .section-header {
      margin-bottom: 2rem;
    }
    
    .section-header h2 {
      font-size: 2rem;
    }
    
    .section-header p {
      font-size: 1rem;
    }
  }

  @media (max-width: 480px) {
    .section-header h2 {
      font-size: 1.8rem;
    }
  }
</style>

