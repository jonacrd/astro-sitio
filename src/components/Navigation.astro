      <li><a href="/contacto" class="nav-link">üìû Contacto</a></li>
    </ul>
  </div>
</nav>

<style>
  .main-navigation {
    position: fixed;
    top: 20px;
    left: 20px;
    z-index: 1000;
    background: rgba(139, 115, 85, 0.95);
    backdrop-filter: blur(10px);
    border-radius: 15px;
    box-shadow: 0 8px 32px rgba(139, 115, 85, 0.3);
    transition: all 0.3s ease;
    border: 2px solid #8b7355;
  }

  .nav-toggle {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    width: 50px;
    height: 50px;
    background: #8b7355;
    border-radius: 10px;
    cursor: pointer;
    padding: 8px;
    transition: all 0.3s ease;
  }

  .nav-toggle:hover {
    background: #a8a47a;
    transform: scale(1.05);
  }

  .hamburger {
    width: 100%;
    height: 3px;
    background: white;
    border-radius: 2px;
    transition: all 0.3s ease;
  }

  .nav-toggle.active .hamburger:nth-child(1) {
    transform: rotate(45deg) translate(8px, 8px);
  }

  .nav-toggle.active .hamburger:nth-child(2) {
    opacity: 0;
  }

  .nav-toggle.active .hamburger:nth-child(3) {
    transform: rotate(-45deg) translate(8px, -8px);
  }

  .nav-menu {
    position: absolute;
    top: 60px;
    left: 0;
    background: #f5f2e8;
    border-radius: 15px;
    box-shadow: 0 8px 32px rgba(139, 115, 85, 0.3);
    min-width: 280px;
    max-height: 0;
    overflow: hidden;
    opacity: 0;
    transform: translateY(-20px);
    transition: all 0.3s ease;
    border: 2px solid #8b7355;
  }

  .nav-menu.active {
    max-height: 600px;
    opacity: 1;
    transform: translateY(0);
  }

  .nav-links {
    list-style: none;
    padding: 1.5rem 0;
    margin: 0;
  }

  .nav-links li {
    margin: 0;
  }

  .nav-link {
    display: block;
    padding: 15px 25px;
    color: #52543c;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    border-left: 4px solid transparent;
    font-size: 1rem;
  }

  .nav-link:hover {
    background: rgba(139, 115, 85, 0.1);
    color: #8b7355;
    border-left-color: #8b7355;
    transform: translateX(8px);
  }

  .nav-link:active {
    background: rgba(139, 115, 85, 0.2);
  }

  /* Indicador de navegaci√≥n */
  .nav-indicator {
    position: fixed;
    top: 50%;
    left: 10px;
    transform: translateY(-50%);
    background: rgba(139, 115, 85, 0.1);
    border: 2px solid #8b7355;
    border-radius: 20px;
    padding: 10px 5px;
    z-index: 999;
    opacity: 0.7;
    transition: opacity 0.3s ease;
  }

  .nav-indicator:hover {
    opacity: 1;
  }

  .nav-indicator::before {
    content: "üì±";
    display: block;
    text-align: center;
    font-size: 1.2rem;
    margin-bottom: 5px;
  }

  .nav-indicator::after {
    content: "Men√∫";
    writing-mode: vertical-rl;
    text-orientation: mixed;
    font-size: 0.8rem;
    color: #8b7355;
    font-weight: bold;
  }

  @media (max-width: 1200px) {
    .main-navigation {
      top: 20px;
      left: 20px;
    }
    
    .nav-menu {
      left: -20px;
      min-width: 280px;
      border-radius: 15px;
    }
    
    .nav-indicator {
      left: 20px;
      padding: 10px 6px;
    }
  }

  @media (max-width: 768px) {
    .main-navigation {
      top: 15px;
      left: 15px;
    }
    
    .nav-menu {
      left: -15px;
      min-width: 250px;
      max-width: 85vw;
      border-radius: 12px;
    }
    
    .nav-toggle {
      width: 45px;
      height: 45px;
      font-size: 1.3rem;
      border-radius: 12px;
    }
    
    .nav-link {
      padding: 14px 22px;
      font-size: 1rem;
      border-radius: 8px;
      margin: 2px 8px;
    }
    
    .nav-indicator {
      left: 15px;
      padding: 8px 5px;
      border-radius: 15px;
    }
  }

  @media (max-width: 480px) {
    .main-navigation {
      top: 12px;
      left: 12px;
    }
    
    .nav-menu {
      left: -12px;
      min-width: 220px;
      max-width: 90vw;
      border-radius: 10px;
    }
    
    .nav-toggle {
      width: 40px;
      height: 40px;
      font-size: 1.1rem;
      border-radius: 10px;
    }
    
    .nav-link {
      padding: 12px 18px;
      font-size: 0.9rem;
      border-radius: 6px;
      margin: 1px 6px;
    }
    
    .nav-indicator {
      left: 12px;
      padding: 6px 4px;
      border-radius: 12px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const navToggle = document.getElementById('nav-toggle');
    const navMenu = document.getElementById('nav-menu');
    
    // Crear indicador de navegaci√≥n
    const navIndicator = document.createElement('div');
    navIndicator.className = 'nav-indicator';
    navIndicator.innerHTML = 'üì±<br>Men√∫';
    document.body.appendChild(navIndicator);
    
    // Toggle del men√∫
    navToggle.addEventListener('click', function() {
      navToggle.classList.toggle('active');
      navMenu.classList.toggle('active');
    });
    
    // Cerrar men√∫ al hacer click fuera
    document.addEventListener('click', function(event) {
      if (!navToggle.contains(event.target) && !navMenu.contains(event.target)) {
        navToggle.classList.remove('active');
        navMenu.classList.remove('active');
      }
    });
    
    // Cerrar men√∫ al hacer scroll
    let scrollTimeout;
    window.addEventListener('scroll', function() {
      navToggle.classList.remove('active');
      navMenu.classList.remove('active');
      
      clearTimeout(scrollTimeout);
      scrollTimeout = setTimeout(function() {
        // Mostrar indicador despu√©s de 2 segundos sin scroll
        navIndicator.style.opacity = '0.7';
      }, 2000);
    });
    
    // Ocultar indicador durante scroll
    window.addEventListener('scroll', function() {
      navIndicator.style.opacity = '0.3';
    });
  });
</script>
