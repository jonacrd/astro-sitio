---
interface Section {
  title: string;
  subtitle?: string;
  href: string;
  imageUrl?: string;
  description?: string;
}

const { sections = [] } = Astro.props as { sections?: Section[] };
---

<section class="section-carousel">
  <div class="container">
    {sections.length === 0 ? (
      <div class="sections-grid">
        <!-- Secci√≥n de Ofertas -->
        <div class="section-card">
          <div class="section-content">
            <div class="section-text">
              <h2 class="section-title">üî• Ofertas Especiales</h2>
              <p class="section-subtitle">Hasta 50% de descuento en productos seleccionados</p>
              <p class="section-description">No te pierdas nuestras incre√≠bles ofertas. Tiempo limitado.</p>
              <a href="/catalogo?filter=ofertas" class="section-btn">
                Ver Ofertas
              </a>
            </div>
            <div class="section-image">
              <div class="image-placeholder">üõçÔ∏è</div>
            </div>
          </div>
        </div>

        <!-- Secci√≥n de Novedades -->
        <div class="section-card">
          <div class="section-content reverse">
            <div class="section-text">
              <h2 class="section-title">‚ú® Novedades</h2>
              <p class="section-subtitle">Descubre las √∫ltimas tendencias de la temporada</p>
              <p class="section-description">Productos frescos y modernos que est√°n de moda.</p>
              <a href="/catalogo?filter=nuevos" class="section-btn">
                Ver Novedades
              </a>
            </div>
            <div class="section-image">
              <div class="image-placeholder">üåü</div>
            </div>
          </div>
        </div>

        <!-- Secci√≥n de Marcas -->
        <div class="section-card">
          <div class="section-content">
            <div class="section-text">
              <h2 class="section-title">üè∑Ô∏è Marcas Destacadas</h2>
              <p class="section-subtitle">Las mejores marcas en un solo lugar</p>
              <p class="section-description">Calidad garantizada de marcas reconocidas mundialmente.</p>
              <a href="/catalogo?filter=marcas" class="section-btn">
                Ver Marcas
              </a>
            </div>
            <div class="section-image">
              <div class="image-placeholder">üèÜ</div>
            </div>
          </div>
        </div>
      </div>
    ) : (
      <div class="sections-grid">
        {sections.map((section) => (
          <div class="section-card">
            <div class="section-content">
              <div class="section-text">
                <h2 class="section-title">{section.title}</h2>
                {section.subtitle && <p class="section-subtitle">{section.subtitle}</p>}
                {section.description && <p class="section-description">{section.description}</p>}
                <a href={section.href} class="section-btn">
                  Ver M√°s
                </a>
              </div>
              <div class="section-image">
                {section.imageUrl ? (
                  <img src={section.imageUrl} alt={section.title} class="section-img" />
                ) : (
                  <div class="image-placeholder">üì¶</div>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>
    )}
  </div>
</section>

<style>
  .section-carousel {
    padding: 2rem 0;
    background: linear-gradient(135deg, #fff 0%, #f8f9fa 100%);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .sections-grid {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .section-card {
    background: white;
    border-radius: 20px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .section-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
  }

  .section-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    padding: 2rem;
    align-items: center;
    min-height: 200px;
  }

  .section-content.reverse {
    direction: rtl;
  }

  .section-content.reverse > * {
    direction: ltr;
  }

  .section-text {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .section-title {
    font-size: 2rem;
    font-weight: 700;
    color: #333;
    margin: 0;
    line-height: 1.2;
  }

  .section-subtitle {
    font-size: 1.1rem;
    color: #8b7355;
    font-weight: 600;
    margin: 0;
  }

  .section-description {
    font-size: 1rem;
    color: #666;
    line-height: 1.5;
    margin: 0;
  }

  .section-btn {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background: linear-gradient(135deg, #8b7355 0%, #a8a47a 100%);
    color: white;
    text-decoration: none;
    border-radius: 50px;
    font-weight: 600;
    font-size: 1rem;
    transition: all 0.3s ease;
    align-self: flex-start;
    margin-top: 0.5rem;
  }

  .section-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(139, 115, 85, 0.4);
  }

  .section-image {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 150px;
  }

  .image-placeholder {
    width: 120px;
    height: 120px;
    background: linear-gradient(135deg, #f5f2e8 0%, #d3d1b6 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 3rem;
    color: #8b7355;
  }

  .section-img {
    width: 100%;
    height: 150px;
    object-fit: cover;
    border-radius: 15px;
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .section-content {
      padding: 1.75rem;
      gap: 1.5rem;
    }
    
    .section-title {
      font-size: 1.75rem;
    }
    
    .section-subtitle {
      font-size: 1rem;
    }
    
    .section-description {
      font-size: 0.95rem;
    }
    
    .image-placeholder {
      width: 100px;
      height: 100px;
      font-size: 2.5rem;
    }
  }

  @media (max-width: 768px) {
    .section-carousel {
      padding: 1.5rem 0;
    }
    
    .container {
      padding: 0 0.75rem;
    }
    
    .sections-grid {
      gap: 1.25rem;
    }
    
    .section-content {
      grid-template-columns: 1fr;
      gap: 1.25rem;
      padding: 1.5rem;
      text-align: center;
    }

    .section-content.reverse {
      direction: ltr;
    }

    .section-title {
      font-size: 1.5rem;
    }

    .section-subtitle {
      font-size: 0.95rem;
    }

    .section-description {
      font-size: 0.9rem;
    }

    .section-btn {
      padding: 0.7rem 1.25rem;
      font-size: 0.95rem;
      align-self: center;
    }

    .image-placeholder {
      width: 90px;
      height: 90px;
      font-size: 2.25rem;
    }
    
    .section-img {
      height: 120px;
    }
  }

  @media (max-width: 480px) {
    .section-carousel {
      padding: 1rem 0;
    }
    
    .container {
      padding: 0 0.5rem;
    }
    
    .sections-grid {
      gap: 1rem;
    }
    
    .section-content {
      padding: 1.25rem;
      gap: 1rem;
    }

    .section-title {
      font-size: 1.3rem;
    }

    .section-subtitle {
      font-size: 0.9rem;
    }

    .section-description {
      font-size: 0.85rem;
    }

    .section-btn {
      padding: 0.6rem 1rem;
      font-size: 0.9rem;
    }

    .image-placeholder {
      width: 80px;
      height: 80px;
      font-size: 2rem;
    }
    
    .section-img {
      height: 100px;
    }
  }

  @media (max-width: 360px) {
    .section-content {
      padding: 1rem;
    }
    
    .section-title {
      font-size: 1.2rem;
    }
    
    .section-subtitle {
      font-size: 0.85rem;
    }
    
    .section-description {
      font-size: 0.8rem;
    }
    
    .section-btn {
      padding: 0.5rem 0.8rem;
      font-size: 0.85rem;
    }
    
    .image-placeholder {
      width: 70px;
      height: 70px;
      font-size: 1.75rem;
    }
  }
</style>