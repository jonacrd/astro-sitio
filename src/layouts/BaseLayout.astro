---
import CartNotification from '@components/react/CartNotification.tsx'
import Header from '@components/react/Header.tsx'
import BottomNavAuth from '@components/react/BottomNavAuth.tsx'
import NotificationSystem from '@components/react/NotificationSystem.tsx'
import { AuthProvider } from '@components/react/AuthContext.tsx'
import { HeaderWrapper } from '@components/ui/HeaderWrapper.tsx'
import { BottomNavWrapper } from '@components/ui/BottomNavWrapper.tsx'
import { SimpleBottomNav } from '@components/ui/SimpleBottomNav.tsx'
import OneSignalSubscriber from '@components/react/OneSignalSubscriber.tsx'
import NotificationWelcome from '@components/react/NotificationWelcome.tsx'
import FloatingNotificationButton from '@components/react/FloatingNotificationButton.tsx'

export interface Props {
  title?: string
  description?: string
}

const { 
  title = "Town - Tu Tienda de Barrio Online",
  description = "Encuentra los mejores productos de tu barrio al mejor precio" 
} = Astro.props
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={description}>
  <link rel="icon" type="image/png" href="/icon.png">
  <link rel="apple-touch-icon" href="/icon.png">
  
  <!-- PWA Manifest -->
  <link rel="manifest" href="/manifest.json">
  
  <!-- OneSignal Web Push SDK - Carga as√≠ncrona para no bloquear -->
  <script>
    // Cargar OneSignal de forma as√≠ncrona despu√©s de que la p√°gina cargue
    window.addEventListener('load', function() {
      setTimeout(function() {
        const script = document.createElement('script');
        script.src = 'https://cdn.onesignal.com/sdks/web/v16/OneSignalSDK.page.js';
        script.defer = true;
        document.head.appendChild(script);
        
        window.OneSignalDeferred = window.OneSignalDeferred || [];
        OneSignalDeferred.push(async function(OneSignal) {
          try {
            await OneSignal.init({
              appId: "270896d8-ba2e-40bc-8f3b-c1e6efd258a1",
              allowLocalhostAsSecureOrigin: true,
            });
            console.log('‚úÖ OneSignal inicializado');
          } catch (error) {
            console.log('‚ö†Ô∏è OneSignal no se pudo inicializar:', error);
          }
        });
      }, 1000); // Esperar 1 segundo despu√©s de la carga
    });
  </script>
  
  <!-- REDISE√ëO VISUAL COMPLETO -->
  <link rel="stylesheet" href="/src/styles/global-redesign.css">
  
  <!-- FORZAR CAMBIOS UI -->
  <link rel="stylesheet" href="/src/styles/force-ui-override.css">
  
  <!-- FORZAR BOTTOM NAV VISIBLE -->
  <link rel="stylesheet" href="/styles/force-bottom-nav.css">
  
  <!-- Design Tokens -->
  <style>
    :root {
      /* Neutros c√°lidos (amables con fotos blancas) */
      --bg-app: #0F1115;              /* fondo app (oscuro, no negro puro) */
      --bg-surface: #151A21;          /* contenedores oscuros */
      --bg-paper: #F7F6F2;            /* "papel" para cards de producto */
      --border-soft: #E7E3DA;         /* borde sutil sobre paper */
      --muted: #9AA4B2;               /* textos secundarios */
      --text-primary: #FFFFFF;
      --text-inverse: #0E1116;

      /* Accentos */
      --primary: #2563EB;             /* CTA principal (azul) */
      --primary-600: #1D4ED8;
      --accent: #F97316;              /* badges/ofertas */
      --success: #10B981;
      --danger: #E11D48;
      --warning: #F59E0B;

      /* Radius & sombras */
      --radius: 16px;
      --shadow-elev: 0 8px 28px -12px rgba(0,0,0,.45);

      /* Tipograf√≠a */
      --font-sans: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Inter, "Noto Sans", Arial, sans-serif;
    }

    /* Utilidades globales */
    .ui-container {
      max-width: 80rem;
      margin: 0 auto;
      padding: 0 1rem;
    }

    .ui-section {
      padding: 2rem 0;
    }

    .ui-card {
      border-radius: var(--radius);
      box-shadow: var(--shadow-elev);
    }

    .ui-btn {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      border-radius: var(--radius);
      padding: 0 1rem;
      height: 2.75rem;
      font-weight: 600;
      transition: all 0.2s;
      outline: none;
    }

    .ui-btn:focus {
      outline: none;
      box-shadow: 0 0 0 2px var(--primary);
    }

    .ui-link {
      color: var(--primary);
      transition: color 0.2s;
    }

    .ui-link:hover {
      color: var(--primary-600);
    }

    /* Break-inside para masonry */
    .break-inside-avoid {
      break-inside: avoid;
    }

    /* Safe area para navbars */
    .ui-navbar-top {
      position: sticky;
      top: 0;
      z-index: 50;
    }

    .ui-navbar-bottom {
      position: sticky;
      bottom: 0;
      z-index: 50;
      padding-bottom: env(safe-area-inset-bottom);
    }

    /* Focus visible mejorado */
    .ui-focus-visible {
      outline: none;
    }

    .ui-focus-visible:focus {
      box-shadow: 0 0 0 2px var(--primary);
    }

    /* Estados de botones */
    .ui-btn:disabled {
      opacity: 0.5;
      cursor: not-allowed;
    }

    /* Inputs con contraste correcto */
    .ui-input {
      background-color: white;
      color: var(--text-inverse);
    }

    .ui-input::placeholder {
      color: var(--muted);
    }

    .ui-input-dark {
      background-color: var(--bg-surface);
      color: var(--text-primary);
    }

    .ui-input-dark::placeholder {
      color: var(--muted);
    }
  </style>
  
  <!-- Importar CSS de prueba -->
  <link rel="stylesheet" href="/src/styles/test.css">
  
  <!-- Importar CSS espec√≠fico del checkout -->
  <link rel="stylesheet" href="/src/styles/checkout.css">
  
  <!-- Importar CSS para restaurar estilos da√±ados -->
  <link rel="stylesheet" href="/src/styles/restore-styles.css">
  
  <!-- Importar CSS para forzar botones -->
  <link rel="stylesheet" href="/src/styles/force-buttons.css">
  
  <!-- Importar CSS para arreglar botones transparentes -->
  <link rel="stylesheet" href="/src/styles/fix-transparent-buttons.css">
  
  <!-- Importar CSS para arreglar botones de b√∫squeda -->
  <link rel="stylesheet" href="/src/styles/fix-search-buttons.css">
  
  <!-- Importar CSS para colores opacos del tema oscuro -->
  <link rel="stylesheet" href="/src/styles/dark-theme-colors.css">
  
  <!-- Fix para modal de login -->
  <link rel="stylesheet" href="/src/styles/modal-fix.css">
  
  <!-- Importar fuentes -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
</head>
<body class="min-h-screen bg-dark-primary text-text-primary">
  <!-- Header Navigation -->
  <HeaderWrapper client:load />

  <!-- Contenido principal -->
  <main class="min-h-screen bg-dark-primary pt-[72px]">
    <AuthProvider client:load>
      <slot />
    </AuthProvider>
  </main>

  <!-- Bottom Navigation -->
  <BottomNavWrapper client:load />

  <!-- Notificaciones del carrito -->
  <CartNotification client:load />

  <!-- Sistema de notificaciones - Solo cargar cuando sea necesario -->
  <NotificationSystem client:idle />


  <!-- Footer -->
  <footer class="bg-bg-surface text-ink-base py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
        <!-- Informaci√≥n de la tienda -->
        <div class="col-span-1 md:col-span-2">
          <h3 class="text-xl font-bold mb-4">üèòÔ∏è Town</h3>
          <p class="text-gray-400 mb-4">
            Tu tienda de barrio online. Los mejores productos de tu comunidad 
            con la comodidad de comprar desde casa.
          </p>
        </div>

        <!-- Enlaces r√°pidos -->
        <div>
          <h4 class="font-semibold mb-4">Enlaces</h4>
          <ul class="space-y-2 text-gray-400">
            <li><a href="/" class="hover:text-white transition-colors">Inicio</a></li>
            <li><a href="/catalogo" class="hover:text-white transition-colors">Cat√°logo</a></li>
            <li><a href="/carrito" class="hover:text-white transition-colors">Carrito</a></li>
          </ul>
        </div>

        <!-- Contacto -->
        <div>
          <h4 class="font-semibold mb-4">Contacto</h4>
          <ul class="space-y-2 text-gray-400">
            <li>üìß info@tienda.com</li>
            <li>üì± +1 234 567 8900</li>
            <li>üìç Ciudad, Pa√≠s</li>
          </ul>
        </div>
      </div>

      <div class="border-t border-gray-800 mt-8 pt-8 text-center text-gray-400">
        <p>&copy; {new Date().getFullYear()} Town. Todos los derechos reservados.</p>
      </div>
    </div>
  </footer>

  <!-- Manejador global de inicio de sesi√≥n -->
  
  <!-- Suscriptor autom√°tico de OneSignal - Solo cuando sea necesario -->
  <OneSignalSubscriber client:idle />
  
  <!-- Modal de bienvenida de notificaciones - Solo cuando sea necesario -->
  <NotificationWelcome client:idle />
  
  <!-- Bot√≥n flotante para activar notificaciones - Solo cuando sea necesario -->
  <FloatingNotificationButton client:idle />
  
  <!-- Tour de Onboarding - Solo cuando sea necesario -->
  <script>
    // Inicializar tour de onboarding
    if (typeof window !== 'undefined') {
      console.log('üéì Tour: Esperando carga de la p√°gina...');
      
      window.addEventListener('load', function() {
        console.log('‚úÖ Tour: P√°gina cargada, iniciando en 500ms...');
        
        setTimeout(async function() {
          try {
            console.log('üì¶ Tour: Importando TourManager...');
            const { initTour } = await import('../lib/tour/TourManager');
            
            console.log('‚úÖ Tour: TourManager importado correctamente');
            console.log('üöÄ Tour: Llamando a initTour()...');
            
            const manager = initTour();
            
            console.log('‚úÖ Tour: TourManager inicializado', manager);
            console.log('üéØ Tour: Ruta actual:', window.location.pathname);
            console.log('üìù Tour: Tour completado?', localStorage.getItem('town_tour_v1_done'));
          } catch (error) {
            console.error('‚ùå Tour: Error inicializando tour:', error);
            console.error('Stack completo:', error);
          }
        }, 500);
      });
    }
  </script>
  
  <!-- Script para sincronizar g√©nero desde Google - Optimizado -->
  <script>
    // Solo ejecutar si el usuario est√° autenticado
    if (typeof window !== 'undefined') {
      // Ejecutar despu√©s de que la p√°gina cargue completamente
      window.addEventListener('load', function() {
        setTimeout(async function() {
          try {
            const { supabase } = await import('../lib/supabase-browser');
            const { data: { user } } = await supabase.auth.getUser();
            
            if (!user) return;
            
            // Solo sincronizar si el usuario tiene gender en metadata y no se ha sincronizado antes
            const googleGender = user.user_metadata?.gender;
            const lastSync = localStorage.getItem('gender_sync_' + user.id);
            
            if (googleGender && !lastSync) {
              try {
                const { error } = await supabase
                  .from('profiles')
                  .update({ gender: googleGender })
                  .eq('id', user.id);
                
                if (!error) {
                  localStorage.setItem('gender_sync_' + user.id, 'true');
                  console.log('‚úÖ G√©nero sincronizado desde Google:', googleGender);
                }
              } catch (err) {
                console.log('‚ö†Ô∏è Columna gender no existe a√∫n');
              }
            }
          } catch (error) {
            console.log('‚ö†Ô∏è Error sincronizando g√©nero:', error);
          }
        }, 2000); // Esperar 2 segundos despu√©s de la carga
      });
    }
  </script>
</body>
</html>