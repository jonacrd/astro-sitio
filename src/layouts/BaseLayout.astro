  <!-- Importar CSS para colores opacos del tema oscuro -->
  <link rel="stylesheet" href="/src/styles/dark-theme-colors.css">
  
  <!-- Fix para modal de login -->
  <link rel="stylesheet" href="/src/styles/modal-fix.css">
  
  <!-- Importar fuentes -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
</head>
<body class="min-h-screen bg-dark-primary text-text-primary">
