  <!-- Efecto de scroll para el header -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const header = document.getElementById('main-header');
      let lastScrollY = window.scrollY;
      
      function updateHeader() {
        const currentScrollY = window.scrollY;
        
        if (currentScrollY > 100) {
          // Cuando se hace scroll hacia abajo, hacer el header m√°s opaco
          header.classList.remove('bg-white/95', 'backdrop-blur-md');
          header.classList.add('bg-white/98', 'backdrop-blur-lg', 'shadow-lg');
        } else {
          // Cuando est√° en la parte superior, header normal
          header.classList.remove('bg-white/98', 'backdrop-blur-lg', 'shadow-lg');
          header.classList.add('bg-white/95', 'backdrop-blur-md');
        }
        
        lastScrollY = currentScrollY;
      }
      
      // Throttle el evento de scroll para mejor rendimiento
      let ticking = false;
      function onScroll() {
        if (!ticking) {
          requestAnimationFrame(updateHeader);
          ticking = true;
          setTimeout(() => { ticking = false; }, 10);
        }
      }
      
      window.addEventListener('scroll', onScroll, { passive: true });
    });
  </script>
